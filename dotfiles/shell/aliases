# vim:ft=sh

# Prettier grep output
alias grep='grep --color=tty --devices skip'

# Prettier ls output
alias ls='LC_COLLATE=C ls --group-directories-first --time-style=+"%Y.%m.%d %H:%M" --color=auto --classify'

# Confirm before overwriting something
alias cp='cp --interactive'
alias mv='mv --interactive'

# Start hyprland
alias starthypr='if uwsm check may-start; then exec uwsm start hyprland-uwsm.desktop; fi'

# Start niri
alias startniri='if uwsm check may-start; then exec uwsm start -- niri --session; fi'
