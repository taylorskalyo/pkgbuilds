pkgname=system-systemd-networkd
pkgver=0.1.0
pkgrel=1
pkgdesc="Configure the systemd-networkd."
arch=('any')
license=('MIT')
depends=('systemd')
source=(
  '20-wired.network'
  '25-wireless.network'
)
sha256sums=(
  'SKIP'
  'SKIP'
)

package() {
  install -dm755 "$pkgdir/etc/systemd/network/"
  for f in "${source[@]}"; do
    install -Dm644 "$srcdir/$f" "$pkgdir/etc/systemd/network/$f"
  done
}
