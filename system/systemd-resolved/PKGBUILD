pkgname=system-systemd-resolved
pkgver=0.0.2
pkgrel=1
pkgdesc="Configure systemd-resolved."
arch=('any')
license=('MIT')
depends=('systemd')
optdepends=(
  'systemd-resolvconf'
)
install="$pkgname.install"
source=(
  'dns_over_tls.conf'
)
sha256sums=(
  'SKIP'
)

package() {
  install -Dm644 "$srcdir/dns_over_tls.conf" "$pkgdir/etc/systemd/resolved.conf.d/dns_over_tls.conf"
}
